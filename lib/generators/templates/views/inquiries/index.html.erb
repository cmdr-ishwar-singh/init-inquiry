<div class="page-subheader mb-30">
  <div class="container-fluid">
      <div class="row align-items-center">
          <div class="col-md-7">
              <div class="list">
                  <div class="list-item pl-0">
                     
                      <div class="list-body">
                          <div class="list-title fs-2x">
                              <h3>Inquiries</h3>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
      </div>
  </div>
</div>
<div class="page-content">
  <div class="container-fluid">
      <div class="row">
      <div class="col-lg-12 mb-30">
          <div class="rounded shadow-sm p-3">
              <div class="text-right font500 fs-1x mb-20">
                <%= link_to 'New Inquiry'.html_safe, new_inquiry_path,:class => 'btn btn-primary' %>
              </div>
           <div>
              <!-- Nav tabs -->
              <ul class="nav nav-pills" role="tablist">
                  <li role="presentation" class="nav-item"><a class="nav-link active show" href="#home" aria-controls="home" role="tab" data-toggle="tab" aria-selected="false">Contact Us Inquiries</a></li>
                  <li role="presentation" class="nav-item"><a class="nav-link" href="#completed" aria-controls="completed" role="tab" data-toggle="tab" aria-selected="true">Completed Inquiries</a></li>
              </ul>
              <!-- Tab panes -->
              <div class="tab-content pt-3">
                  <div role="tabpanel" class="tab-pane active show" id="home">
                      <p class="mb-0 text-muted">
                         <div class="col-lg-12">
                          <% if @inquiries.where(:status => 1).count > 0 %>
                           <div class="portlet-box">
                              <div class="portlet-body no-padding">
                                 <table class="table table-hover mb-0">
                                  <thead>
                                      <tr>
                                          <th>Name</th>
                                          <th>Email</th>
                                          <th>Phone Number</th>
                                          <th></th>
                                      </tr>
                                    </thead>
                                    <tbody>
                                      <% @inquiries.where(:status => 1).each do |inquiry| %>
                                        <tr>
                                            <td><%= inquiry.name %></td>
                                            <td><%= inquiry.email %></td>
                                            <td><%= inquiry.phone %></td>
                                            <td>
                                            <%= link_to '<i class="fa fa-eye"></i>'.html_safe, inquiry_path(inquiry),remote: true,:class => 'btn btn-primary' %>

                                             <a href="javascript://" id="completeInquiry" class="btn btn-info" data-confirm="Are you sure?" data-inquiry_id="<%= inquiry.id %>"><i class="fa fa-check"></i></a> 
                                          </td>
                                        </tr>
                                      <% end %>

                                   <% if @inquiries.length == 0 %>   
                                    <tr>
                                      <td colspan="10" class="text-center">No record found!</td>
                                    </tr> 
                                   <% end %>
                                  </tbody>
                              </table>
                              </div>
                              
                          </div>
                          <% else %>
                              <div role="tabpanel" class="tab-pane" id="tab10">
                                <div class="row">
                                    <div class="col-md-12" style="margin: 20px;">
                                       <h3 class="text-center">No inquiries yet</h3>
                                    </div>
                                </div>
                            </div>
                            <% end -%> 
                        </div>
                      </p>
                  </div>
                  <div role="tabpanel" class="tab-pane" id="completed">
                   <p class="mb-0 text-muted">
                         <div class="col-lg-12">
                          <% if @inquiries.where(:status => 0).count > 0 %>
                           <div class="portlet-box">
                              <div class="portlet-body no-padding">
                                 <table class="table table-hover mb-0">
                                  <thead>
                                      <tr>
                                          <th>Name</th>
                                          <th>Email</th>
                                          <th>Phone Number</th>
                                          <th></th>
                                      </tr>
                                    </thead>
                                    <tbody>
                                      <% @inquiries.where(:status => 0).each do |inquiry| %>
                                        <tr>
                                            <td><%= inquiry.name %></td>
                                            <td><%= inquiry.email %></td>
                                            <td><%= inquiry.phone %></td>
                                            <td>
                                            <%= link_to '<i class="fa fa-eye"></i>'.html_safe, inquiry_path(inquiry),remote: true, :class => 'btn btn-primary' %>
                                            <a href="javascript://" class="btn btn-info disabled"><i class="fa fa-check"></i></a>
                                          </td>
                                        </tr>
                                      <% end %>

                                   <% if @inquiries.length == 0 %>   
                                    <tr>
                                      <td colspan="10" class="text-center">No record found!</td>
                                    </tr> 
                                   <% end %>
                                  </tbody>
                              </table>
                              </div>
                          </div>
                          <% else %>
                              <div role="tabpanel" class="tab-pane" id="tab10">
                                <div class="row">
                                    <div class="col-md-12" style="margin: 20px;">
                                       <h3 class="text-center">No Completed Inquiries Yet</h3>
                                    </div>
                                </div>
                            </div>
                            <% end -%> 
                        </div>
                      </p>
                  </div>
                  
              </div>
          </div>
          </div>
      </div>
    </div>
  </div>
  </div>
<div class="inquiry-content"></div>
  <script type="text/javascript">
  $(document).on("click", "#completeInquiry", function(){
    let inquiryId = $(this).data("inquiry_id");   
    window.location = '/inquiries/'+inquiryId+'/update';
  });
</script>
